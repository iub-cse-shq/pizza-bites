                        <label for="lname">Description</label>
                        <input type="text" id="dsp"  placeholder="Description">

                        <label for="country">Image Link</label>
                        <input type="text" id="image"  placeholder="Image link">
                        <label for="country">Price</label>
                        <input type="number" id="price" n placeholder="Price">
                        
                        <label for="size">Size</label>
